    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Account, "Расчетный счет ")
        @Html.EditorFor(requisites => requisites.Account)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.KorrAccount, "Корр. счет ")
        @Html.EditorFor(requisites => requisites.KorrAccount)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Bik, "БИК")
        @Html.EditorFor(requisites => requisites.Bik)
    </div>
    <div class="panel-footer">
        <button type="submit">Сохранить</button>
    </div>
}
