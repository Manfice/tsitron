    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Inn, "ИНН ")
        @Html.EditorFor(requisites => requisites.Inn)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Kpp, "КПП")
        @Html.EditorFor(requisites => requisites.Kpp)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Bank, "Банк ")
