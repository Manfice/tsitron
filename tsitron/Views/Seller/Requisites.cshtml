        @Html.LabelFor(requisites => requisites.Title, "Наименование компании ")
        @Html.EditorFor(requisites => requisites.Title)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.UrName, "Полное наименование ")
        @Html.EditorFor(requisites => requisites.UrName)
    </div>
    <div class="formControl">
        @Html.LabelFor(requisites => requisites.Address, "Юридический адресс ")
        @Html.EditorFor(requisites => requisites.Address)
