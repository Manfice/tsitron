@model tsitron.Domain.Models.ImageViewModel
@using (Html.BeginForm("UploadImage", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.Bouquet)
    @Html.HiddenFor(model=>model.Customer)
    <div class="box">
        <div class="box-top">
            <p>Добавить фото букета</p>
        </div>
        <div class="box-panel">
            <p>Выберите фото:</p>
            @Html.TextBoxFor(model => model.UploadImage, new {type = "file", name = "Image"})
            <p>Описание:</p>
            @Html.TextAreaFor(model=>model.Descr, new {@class="form-control"})
            @Html.CheckBoxFor(model=>model.Avatar, new {style="float:right; margin-right: 30%"})
            <p>Сделать главной:</p>
            <input type="submit" name="Image" value="Загрузить"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
