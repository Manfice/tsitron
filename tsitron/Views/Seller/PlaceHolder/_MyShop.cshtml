<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="pull-right" style="margin: 5px; color: whitesmoke;">
            Редактировать:
            <input type="checkbox" data-bind="checked:ViewModel.editShop" />
        </div>
        <p>Информация о магазине:</p>
    </div>
    <div class="panel-body">
        <div class="row" data-bind="visible:ViewModel.editShop()==false">
            <div class="col-md-3">
                LOGO
            </div>
            <div class="col-md-9">
                <h2 data-bind="text:Shop.title"></h2>
                <!-- ko if:Shop.aroundTheClock()==false -->
                <div>
                    <h3>Часы работы: c <span data-bind="text:Shop.startWork"></span><span> до </span><span data-bind="text:Shop.endWork"></span></h3>
                </div>
                <!--/ko-->
                <!-- ko if:Shop.aroundTheClock -->
                <div>
                    <h3>Часы работы: kруглосуточно</h3>
                </div>
                <!--/ko-->
            </div>
        </div>
        <div data-bind="visible:ViewModel.editShop">
            <div class="form-inline">
                <label>Название вашего магазина:</label>
                <input class="form-control" type="text" data-bind="value:Shop.title"/>
            </div>
            <!-- ko if:Shop.aroundTheClock()==false -->
            <h3>Часы работы:</h3>
            <div class="form-inline">
                <label>Начало рабочего дня:</label>
                <input class="form-control" type="number" data-bind="value:Shop.startWork"/>
            </div>
            <div class="form-inline">
                <label>Конец рабочего дня:</label>
                <input class="form-control" type="number" data-bind="value:Shop.endWork"/>
            </div>
            <!--/ko-->
            <div class="form-inline">
                <label>Магазин работает круглосуточно:</label>
                <input type="checkbox" data-bind="checked:Shop.aroundTheClock"/>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="text-center">
            <button name="save" onclick="saveShopData()">Сохранить</button>
        </div>
    </div>

</div>
