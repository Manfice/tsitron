@model tsitron.Domain.Entitys.Goods.Flower

@{
    ViewBag.Title = "FlowerDetails";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<h2>FlowerDetails</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
