@model IEnumerable<tsitron.Domain.Entitys.Goods.EventType>

<table class="table">
    <tr>
        <th>
            <p style="color: green">Наименование</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @using (Html.BeginForm("DeleteEventTypeAsync","Admin",FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", item.Id)
                <input type="submit" value="Удалить" class="btn btn-danger btn-sm"/>
            }
        </td>
    </tr>
}

</table>
