<div class="panel panel-primary">
    <div class="panel-heading">
        Доступные цвета:
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Код</td>
                    <td>Наименование</td>
                    <td>Действия</td>
                </tr>
            </thead>
            <tbody data-bind="foreach:ViewModel.flowers">
                <tr>
                    <td data-bind="text:id"></td>
                    <td data-bind="text:title"></td>
                    <td><button data-bind="click:deleteFlower">Удалить</button></td>
                </tr>
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
    <div class="panel-footer">
        <div class="form-horizontal">
            <label>Добавить цветок:</label>
            @*<input type="color" data-bind="value: colorsVm.newColor.selValue"/>*@
            <input type="text" data-bind="value:ViewModel.newFlower.title" />
            <input type="submit" data-bind="click:saveFlower" />
        </div>
    </div>
</div>