@model tsitron.Domain.Entitys.Goods.GoodsColor

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("AddColorAsync","Admin",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p>Здать новый цвет</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class = "control-label col-md-2">Выберите цвет:</p>
            <div class="col-md-10">
                <input type="color" class="form-control" name="color"/>
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2">Название цвета:</p>
            <div class="col-md-10">
                <input type="text" class="form-control" name="title"/>
                @Html.ValidationMessageFor(model => model.StrValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
